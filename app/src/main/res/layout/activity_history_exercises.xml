<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context="com.google.android.gms.example.conexionarduinov2.ui.HistoryExercisesActivity">


    <TextView
        android:id="@+id/textViewTypeExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textViewHistory"
        android:layout_toStartOf="@+id/textViewHistory"
        android:background="@drawable/back_title_selec_excer"
        android:padding="8dp"
        android:singleLine="true"
        android:text="Beanch Press"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/grey_white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/back_title_selec_excer"
        android:padding="8dp"
        android:singleLine="true"
        android:text="@string/tex_history"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/container_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewHistory"
        android:layout_marginTop="16dp"
        android:weightSum="13">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@drawable/back_title_table_history_exercise"
            android:padding="12dp"
            android:text="@string/text_date"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@drawable/back_title_table_history_exercise"
            android:padding="12dp"
            android:text="@string/tex_training_system"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/back_title_table_history_exercise"
            android:text="@string/tex_weight"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewHistoryExercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:layout_above="@+id/buttonNewSet"
        android:layout_below="@+id/container_titles"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonNewSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/back_btn_new_set"
        android:paddingBottom="16dp"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:paddingTop="16dp"
        android:text="@string/btn_new_set"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textStyle="bold" />


</RelativeLayout>
