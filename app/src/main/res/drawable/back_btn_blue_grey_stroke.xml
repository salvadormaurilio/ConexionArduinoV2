<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blue_grey_black" />
            <stroke android:width="2dp" android:color="@color/gray_stroke" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/blue_grey_black" />
            <stroke android:width="2dp" android:color="@color/gray_stroke" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/blue_grey_white" />
            <stroke android:width="2dp" android:color="@color/gray_stroke" />
        </shape>
    </item>

</selector>